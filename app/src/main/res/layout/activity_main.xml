<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/selectFragment"
        android:name="com.example.restfulactivity.fragments.SelectFragment"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_below="@+id/bt_esci"
        android:layout_marginTop="10dp"></fragment>

    <fragment
        android:id="@+id/outputFragment"
        android:name="com.example.restfulactivity.fragments.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectFragment"
        android:layout_marginTop="0dp">

    </fragment>

    <Button
        android:id="@+id/bt_esci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Esci" />
</RelativeLayout>