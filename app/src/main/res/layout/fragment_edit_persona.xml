<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4sp"
    android:background="@color/white"
    tools:context=".fragments.EditPersonaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Modifica una persona registrata"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_edit_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_id"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Nome"
            android:includeFontPadding="true"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_edit_cognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_nome"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Cognome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_edit_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_cognome"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="EtÃ "
            android:inputType="number" />

        <EditText
            android:id="@+id/et_edit_altezza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_eta"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Altezza"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_edit_residenza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_altezza"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Residenza"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_residenza"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_edit"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:text="MODIFICA" />

            <ProgressBar
                android:id="@+id/pb_edit"
                style="?android:attr/progressBarStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_edit"
            android:layout_marginTop="4sp"
            android:ems="10"
            android:hint="ID persona"
            android:inputType="number" />

    </RelativeLayout>
</FrameLayout>