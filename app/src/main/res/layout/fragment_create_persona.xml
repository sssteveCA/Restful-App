<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4sp"
    android:background="@color/white"
    tools:context=".fragments.CreatePersonaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Registra una nuova persona"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_create_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_create"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Nome"
            android:includeFontPadding="true"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_create_cognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_nome"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Cognome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_create_eta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_cognome"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="EtÃ "
            android:inputType="number" />

        <EditText
            android:id="@+id/et_create_altezza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_eta"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Altezza"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_create_residenza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_altezza"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:ems="10"
            android:hint="Residenza"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bt_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_create_residenza"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20sp"
            android:text="REGISTRA" />

        <ProgressBar
            android:id="@+id/pb_create"
            style="?android:attr/progressBarStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/bt_create"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:visibility="gone" />

    </RelativeLayout>
</FrameLayout>